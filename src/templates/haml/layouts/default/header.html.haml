.header-wrapper
  .header
    %a.logo{:href=>url_for("/")}
      %img{:src => url_for('images/logo.svg')}
    = include('layouts/default/menu')
    %label.language-selector{:for => "lang-pick"}
      %select#lang-pick.flag
        - foreach (keys %{ $languages }) {
          - my ($code, $name) = ($_, $languages->{$_});
          - if ($code ne $sel_code) {
            %option{:class => $code}= $name
          - } else {
            %option{:class => $code, :selected => 'selected'}= $name
          - }
        - }    
    %button.login-button= l('Log in')
