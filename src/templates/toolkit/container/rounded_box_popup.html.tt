<div[% IF id %] id=[% id %][% END %] class="rbox-shadow-popup[% IF extra_class %] [% extra_class %][% END %]">
    <div class="rbox-shadow-popup-wrap">
        <div class="rbox-shadow-left">
            <div class="rbox-shadow-right">
                <h4>[% heading %] <span class="close_button">&nbsp;</span></h4>
                [% content %]
            </div>
        </div>
    </div>
</div>
